{

  "manifest_version": 2,
  "name": "intercomment",
  "version": "1.0",

  "description": "Allows users to comment on web pages.",

  "icons": {
    "48": "images/meerkat.png"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [{
    "matches": ["*://*"],
    "js": ["intercomment.js"]
  }]

}